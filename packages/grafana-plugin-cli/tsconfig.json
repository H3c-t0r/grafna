{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "rootDirs": ["."],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "skipLibCheck": true,

    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  }
}
